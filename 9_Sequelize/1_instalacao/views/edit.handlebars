<h1>Editando: {{user.name}}</h1>
<form class="form" method="post" action="/users/update">

    <input type="hidden" name="id" value="{{user.id}}">

    <div class="form-control">
        <labe for="name">Nome: </labe>
        <input type="text" name="name" placeholder="Digite seu nome: " value="{{user.name}}">
    </div>

    <div class="form-control">
        <labe for="occupation">Ocupação: </labe>
        <input type="text" name="occupation" placeholder="Digite a profissão: " value="{{user.occupation}}">
    </div>

    <div class="form-control form-checkbox">
        <input type="checkbox" name="newsletter" checked>
        <labe for="newsletter">Enviar promoções? </labe>
    </div>

    <input type="submit" value="Confirmar Edição">

</form>