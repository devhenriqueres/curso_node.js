<h1>Usuários Cadastrados:</h1>

<div class="container">
    {{#each users}}

        <div class="item">

            <h2>Nome: {{this.name}}</h2>
            <p>Profissão: {{this.occupation}}</p>
            <div class="actions">
                <a href="/users/{{this.id}}" class="details-btn">Ver detalhes</a>

                <a href="/users/update/{{this.id}}" class="edit-btn">Editar cadastro</a>

                <form action="/users/delete/{{this.id}}" method="post">
                    <input type="submit" value="Deletar" class="delete-btn">
                </form>
                
            </div>
            
        </div>

    {{/each}}
</div>