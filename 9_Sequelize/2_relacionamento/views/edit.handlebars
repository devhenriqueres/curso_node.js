<h1>Editando: {{user.name}}</h1>
<form class="form" method="post" action="/users/update">

    <input type="hidden" name="id" value="{{user.id}}">

    <div class="form-control">
        <labe for="name">Nome: </labe>
        <input type="text" name="name" placeholder="Digite seu nome: " value="{{user.name}}">
    </div>

    <div class="form-control">
        <labe for="occupation">Ocupação: </labe>
        <input type="text" name="occupation" placeholder="Digite a profissão: " value="{{user.occupation}}">
    </div>

    <div class="form-control form-checkbox">
        <input type="checkbox" name="newsletter" checked>
        <labe for="newsletter">Enviar promoções? </labe>
    </div>

    <input type="submit" value="Confirmar Edição">

</form>



<div class="adress-container">
    <h2>Endereços</h2>

    <form action="/adress/create" method="post">

        <input type="hidden" name="UserId" value="{{user.id}}">

        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" id="" placeholder="Digite a rua">
        </div>

        <div class="form-control">
            <label for="number">Número:</label>
            <input type="text" name="number" id="" placeholder="Digite o número">
        </div>

        <div class="form-control">
            <label for="city">Cidade:</label>
            <input type="text" name="city" id="" placeholder="Digite a cidade">
        </div>

        <input type="submit" value="Incluir endereço">

    </form>

    <div class="adress-list">
        <h2>Lista de Endereços</h2>
        {{#each user.Adresses}}
        <div>{{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}
            <form action="/adress/delete" method="post">
                <input type="hidden" name="UserId" value="{{this.UserId}}">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="submit" value="Deletar endereço">
            </form>
        </div>
        {{/each}}
    </div>

</div>